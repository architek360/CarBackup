/*------------------------------------*\
    Bridal Contact Us -- Desktop CSS
\*------------------------------------*/
/**
 * MODULE CONTAINER....main container (.contact)
 * SERVICE CONTAINER......contact information (.contact-relation, .contact-bridal)
 */

/*------------------------------------*\
    $MODULE CONTAINER
\*------------------------------------*/
.contact {
	

/*------------------------------------*\
    $SERVICE CONTAINER
\*------------------------------------*/

		.contact-relation{
			position: relative;
			display:inline-block;
			width: 481px;
			
		}

		.contact-bridal{
			position: relative;
			display:inline-block;
			color: $primary-51;
			width: 480px;
			@include rem('margin-left', 10px);
			border:1px solid $primary-17;
			text-align: center;
			
			> img{
				max-width:100%;
				max-height: 298px;				
			}
			.service-image{
				max-width:100%;
				max-height: 298px;
				min-height: 298px;
			}

			.cta-button{
				display: table;
				margin:0 auto 25px;
				width: auto;
				
				.input-arrow{
					@include rem('padding-right', 3px);
					top: -2px;
				}
				.cta-button__input{
					@include proxiBold-font();
				}
			}
				
			.heading3{
				@include rem('margin-top',17px);
				@include f(12);
				color: $primary-51;
				text-align:center;
				position: absolute;
				width:100%;
				@include rem('letter-spacing', 1px);
			}
			
			.telephone{
				@include proxi-font;
				@include rem('letter-spacing', 1px);
				text-transform: uppercase;
				@include f(24);
				font-style: normal;
				@include rem('margin', 20px 0 0);
				text-align: center;
				width: 100%;
				float:left;
			}

			.contact__service-cont__timimgs{
				color: $primary-51;
				text-align:center;
				width: 100%;
				position: absolute; 
				top:35px;
				@include f(13);
				@include rem('letter-spacing', 0px);


				.cta-button{
					display: table;
					margin:25px auto;
				}

				.cta--red{
					width: auto;
				}
			}
		}

		.js-bridal-schedule{
			display:inline-block;
			@include rem('margin', 20px 0 0);
			width:100%;
		}
}

