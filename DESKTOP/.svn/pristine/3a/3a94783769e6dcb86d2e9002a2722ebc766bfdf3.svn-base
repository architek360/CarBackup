.billing-address-content-wrapper{


	.heading2{
		@include f(14);
		line-height:1.9rem;
		letter-spacing:.14rem;

	}

	.privacy-notice{
		background: url($path-images + 'icons/lock-big.png') 70px 15px no-repeat;
		text-align:center;
		@include main-font();
		@include f(13);
		letter-spacing:0;
	}


		.conf{
			text-align:center;
		}		

		.delivery-days{
			@include rem('width', 463px);
			margin:0 auto;
			background: none;
			padding:0px 85px 10px 65px;

			.delivery-days__list{
				background: none;
				position: relative;
				@include rem('line-height',23px);
				.delivery-wrapper{
					display: table-cell;
	    			vertical-align: top;
    			}
				
				li.date-options,li.time-options {	
						margin-bottom: 5px;
						background:none;
						padding: 0px;
						border: medium none;
    					display: block;
    					width: 100%;

    					.selector{
    						width: 263px !important;
    						background-position:-430px -635px;

    						span{
    							width: 263px !important;
    							background-position: right -536px;
    						}
    					}

    					label.form-label {
	    					display: inline-block;
						    float: left;
						    font-size: 12px;
						    margin: -8px 8px 5px 0px;
						    padding-left: 0px;
						    width: auto;
						    @include proxi-font;
						    font-weight: bold;
						    text-align: left;
						    
					   }

				}



				.tooltip-div{
					float: left;
					margin: -7px 0 0;
					position: relative;
					right: 0;
				}
					
				.radio-wrapper{
					display:table-cell;
					width:72px;
					position:relative;
					
					.form-radio-label{
						position:absolute;
						top:35px;
						left:25px;

						span{
							height:20px;
							width:20px;
							background-position:-195px -432px;
						}

						span.checked{
								background-position:-218px -432px;
						}
					}

				}

				.delivery-day__japan {
					@include rem('margin', 0px);
					width: auto;
					text-align: left;

					.form-label{
						display: block;
						float: left;
						@include rem('margin', 25px 0px 5px 0px);
						@include rem('padding-left', 0px);
						@include rem('width', 265px);
						text-align: left;
					}
				}

				.delivery-days__amt{
					font-size: 13px;
					position: absolute;
    				right: 5px;
    				top: 34px;
    				text-align: right;
    				height: auto;
				}
				
				.delivery-days__desc{
					width:263px;
					display:table-cell;
					position:relative;

					p{
						text-align: left;
						@include proxi-font();
						@include f(11);
						weight:bold;
						line-height:2rem;
						cursor:pointer;
						@include rem('padding', 0px);
						@include rem('margin-top', 10px);
					}

					.delivery-days__desc__detail{
						@include main-font;
						@include rem('margin', 10px 0px);
						font-weight:normal;
						cursor:text;
						color:#AB999C;
						font-style:normal;
						height:auto;
						letter-spacing:0;
						@include rem('line-height',15px);
						display: inline-block;
					}

					.tooltip-div{
						position:absolute;
						top:.6rem;
						right:95px;
					}
				}

				.below_desc_container {
					width: 265px;
					display: block;
					@include f(12);
					margin: 20px 0px;
				}
			}

			.standard-delivery{
				border:1px solid $primary-79;
			}

			.express-delivery{
				.tooltip-div{
					right:115px !important;
				}
			}

			.delivery-charges{
				position:relative;

				p{
					text-align:right;
					position:absolute;
					top:2rem;
					right:1rem;

				}
			}
		}
		.my-billing-address-content-wrapper,.my-shipping-address-content-wrapper {
			.main-content {
				.tab_shipping_address {
					.address-selector {
						display: block;
    					margin: 0 auto;
    					width: 40%;

    					.selector {
    						width: 277px !important;

    						> span {
    							width: 100% !important;
    						}
    					}
					}
				}
				.edit-footer__edit {
					a {
						float: right;
					}
					.edit-icon{
						@include rem('padding', 0px);
						border-left: 1px solid $primary-79;
					}
					.replace-icon{
						@include rem('padding', 0px);
						border-left: 1px solid $primary-79;
					}
				}
			}
		}
}