.gift-for-you-heading{
	text-align: center;
	position: absolute;
	top: 35px;
	width: 100%;
	z-index: 50;
	color:white;
	font-family: "ProximaNova","Helvetica Neue",Helvetica,Arial,sans-serif;
	letter-spacing: .1em;
	text-transform: uppercase;
	font-size: 30px;
	font-weight: bold;
	font-weight: normal;
	padding: 0 0 0.5em;
	margin: 0;
	left:0;
	top:25%;
}
.all-creation{
	letter-spacing: .1em;
	text-transform: uppercase;
	font-size: 12px;
	font-weight: bold;
	border-top: 1px solid #595959;
	text-align: center;
	@include rem('margin',15px 0 15px 0);
	span{
		background-color: #000;
		padding: 0 15px;
		position: relative;
		top: -8px;
		color:white;
	}
}

.gift-landing{
	border:1px solid #595959;
	@include rem('margin',45px 0 10px);
	position: relative;

	img{
		width: 100%;
		min-height:540px;
	}

	.heading1{
		position: absolute;
		top: 15px;
		text-align: center;
		width: 100%;
	}

	.action-button{
		position: absolute;
		bottom: 25px;
		width: 100%;
		text-align: center;

		.more-button{
			width: auto;
			display: inline-block;
			@include f(14);
			text-transform: uppercase;
			color: $primary-2;
			@include proxi-font();
			font-weight: bold;
			font-style: normal;
			@include rem('letter-spacing',1px);

			.arrow-show{
				@include setSpriteDesktop(7px, 7px ,-429px ,-495px, transparent); 
			}
		}
	}
}

.js-selection-wrapper{
	.js-nested-slider{
		> li{
			width: 978px !important;
		}
	}

	.js-slider{
		li{
			width: 180px !important;
		}
	}

	.zoom-icon{
		left:48%;
		bottom:40px;
	}
}