.add_to_favorites #modalWindow{
    height: auto;
    @include rem('min-height',50px);
    @include rem('min-width',460px);
}
.add-to-favorites-wrapper{
    @include rem('min-width',460px);
    text-align: center;
    .heading3 {
        @include proxi-font();
        letter-spacing: .1em;
        text-transform: uppercase;
        @include f(16);
        font-weight: bold;
        @include rem('margin-bottom',24px);
        padding: 0;
    }
    .formwrapper{
        display: inline-block;
        form{
            float: left;
        }
        a{
            @include setSpriteDesktop(auto, 20px, -429px, -48px, transparent);
            @include rem(padding, 10px 0 0 10px);
            @include rem('margin', 10px 0 0 20px);
            width: auto;
            float: left;
        }
    }
}