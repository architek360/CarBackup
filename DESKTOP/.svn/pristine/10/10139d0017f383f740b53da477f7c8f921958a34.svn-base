.assist-wrapper{
    float: right;
    text-align: right;
    min-width: 225px;
	min-height: 35px;
	@include rem(margin-top, 10px);
	
    .assistance{
        @include proxi-font;
        font-weight: bold;
        letter-spacing: .1em;
        text-transform: uppercase;
        @include f(11);
        @include setSpriteDesktop(100%, auto ,-118px ,-114px, transparent); 
        vertical-align: middle;
        width:auto;
        height: auto;
        @include rem(padding, 4px 0 0 30px);
        @include rem(height, 31px);
        display: block;
        @include rem(margin, 0px);
        color: $primary-2;

        .red{
            color: $primary-5;
            @include proxi-font;
            font-weight: bold;
            text-align: center;
			clear: both;
			display: table;
        }
    }

}
