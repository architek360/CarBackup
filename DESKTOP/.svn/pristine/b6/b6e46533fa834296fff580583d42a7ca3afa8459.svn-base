/*------------------------------------*\
    Carousel -- Desktop CSS
\*------------------------------------*/
/**
 * MODULE CONTAINER....main container (.wishlist)
 * HEADING MODULE... For heading i.e.. h2, h3 (.wishlist__title)
 * PRODUCT DETAIL ROW...... price detail row(.product-detail)
  */

/*------------------------------------*\
    $MODULE CONTAINER
\*------------------------------------*/
.copy-to-wishlist{
	border:none;
	text-align:left;
	@include rem('padding',0px);

	.form-input,.select-1 {
		color: #FFFFFF;
    	display: inline;
    	font-size: 11px;
    	height: 27px;
    	line-height: 27px;
    	padding: 0 0 0 3px;
	}

	.form-input {
		width: 159px;
	}

	.single-line{
		display:inline-block;
		position:relative;
		width: 100%;

		.cta-button{
			position:absolute;
			top:3px;
			right: 0px;
			margin:0;
			@include rem('padding',3px 5px);
		}

		.selector{
			width: 151px !important;

			span {
				width: 151px !important;
				 color: $primary-3;
	            font-style: italic;
	            letter-spacing: 0px;
				overflow: hidden;
				text-overflow: ellipsis;
				white-space: nowrap;
			}
		}

		.form-input{
			font-style: normal;
		}

	}

	.input-field{
		@include rem('padding',10px 10px 15px 0);
		display:block;
	}

	.select-1{
		background: none;
		border: medium none;
		display: inline-block;
		@include f(13);
		height: 25px;
		left: 0;
		opacity: 0;
		filter: alpha(opacity=0);
		position: absolute;
		top: 2px;
		width: 100% !important;
		@include main-font;
	}

	.form-label {
		text-transform: uppercase;
		max-width: 100%;
		margin-bottom: 0px;
		line-height: 15px;
	}


	.separator {
    	border-top: 1px solid #4D4D4D;
    	content: "";
    	margin: 10px auto 10px 115px;
    	width: 105px;
	}

	
	hr{
		margin:0px 50px 10px;
		width: 50%;
		display: block;
	}
}

.contact .contact__contact-cont .contact__service-cont img {
  width: auto;
}