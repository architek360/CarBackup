//font faces
@mixin brand-font {
	font-family: "CarteirRegular", sans-serif;
}

@mixin bold-font {
	font-family: "CarteirBold", sans-serif;
}

@mixin medium-font {
	font-family: "CarteirMedium", sans-serif;
}

@mixin main-font {
	font-family: Georgia,Palatino,"Palatino Linotype",Times,"Times New Roman",serif;
}
@mixin proxi-font{
	font-family: "ProximaNova","Helvetica Neue",Helvetica,Arial,sans-serif;
}
@mixin proxiBold-font{
	font-family: proximanovaBold,"Helvetica Neue",Helvetica,Arial,sans-serif;
}

@mixin EB-font{
	font-family: EBGaramond, sans-serif;
}
@mixin didotroman-font{
	font-family: didotroman, sans-serif;
}
@mixin didotromanIt-font{
	font-family: didotromanitalic, sans-serif;
}
@mixin mb-script-font{
	font-family: mb-script, sans-serif;
}
@mixin Corsiva-font{
	font-family: Corsiva W01, sans-serif;
}
@mixin Kuenstler-font{
	font-family: Kuenstler Script W01 Medium , sans-serif;
}

/*------------------------------------*\
    $HEADER COMMON STYLING
\*------------------------------------*/
.text-link{
	@include font-color($primary-6);
}

.top-nav{
	.top-nav__menu{
		float: left;
		@include rem('padding', 18px 26px);
		@include rem('margin-top', 10px);

		button{

			@include setSprite(42px, 36px, -452px, -20px);
			border:none;
			text-indent: -9999px;
			overflow:hidden;

		}
	}
}

/*------------------------------------*\
    $COLLECTION COMMON STYLING
\*------------------------------------*/
.main-container {
	.collection-image {

		@include rem('padding-top',20px);
	}
	.collection-image {
		display:block;


		img{
			@include rem('max-height',400px);

			width: 100%;

			/*@include rem('max-height',370px);
			@include rem('max-width',640px);*/



		}
	}


	.heading7{

		color: $primary-2;
		width: 81.25%;
		margin: 0 auto;
		/*margin-bottom: 0;
		@include rem('margin-top', 38px);*/
		text-align: center;
		text-transform: uppercase;
		@include f(24);
		@include rem('padding', 25px 0px 23px);
		@include brand-font;
		font-weight:normal;
		line-height:27px;
		/*line-height:1.4em;*/
	}
	.heading6{
		@include brand-font;
		color: $primary-2;
		width: 81.25%;
		margin: 0 auto;
		text-align: center;
		text-transform: uppercase;
		@include f(32);
		@include rem('padding', 0px);
		@include rem('padding-bottom', 26px);
		/*line-height:1.4em;*/

	}



}

.body-wrapper{
	max-width: 1600px;
	margin: 0 auto;
	color: $primary-2;
	p{
		color: $primary-2;
	}

	label{
		color: $primary-2;
	}
}

.collection {

	.collection__title{

		display:block;
		.heading4{
			@include rem(padding-top, 65px);
			@include rem(padding-bottom, 22px);
			@include f(24);
		}
		.heading2{
			@include rem(padding, 0 0 41px 0);
			border-bottom: 1px solid $primary-2;
		}
	}
}


