/*******************************
*
* City Autosuggest
*
*/
.store-search-wrapper {
    .js-store-locator_error-msg-1, .js-store-locator_error-msg-2{
        display: none;
        text-align: center;
        margin: 20px;
        font-size: 13px;
    }
    .store-locater__search{
        @include rem(width, 300px);
        position: relative;
        margin: 0 auto;
        display: block;
        input{
            display: inline-block;
            font-style: italic;
            margin: auto;
            @include rem(width, 300px);
            @include rem(height, 32px);
            @include rem(font-size, 16px);
            @include rem(padding-left, 15px);
            @include rem(margin-right, 10px);
            @include rem(padding, 0 0 0 10px);
        }
    }
}
