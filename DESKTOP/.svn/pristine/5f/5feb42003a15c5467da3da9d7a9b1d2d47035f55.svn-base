/*------------------------------------*\
    famous-diamond -- Mobile CSS
\*------------------------------------*/
/**
 * MODULE CONTAINER....main container (.famous-diamond)
 * INNER BLOCK......inner items (.famous-diamond__list, etc.)
 * IMG BLOCK......paging for list items (.famous-diamond__img,  etc.)
 */

/*------------------------------------*\
    $MODULE CONTAINER
\*------------------------------------*/
.famous-diamond{
	@include rem('line-height', 35px);
	@include font-color($primary-2);
	margin:0 auto;
	@include rem(padding, 20px 0);
	border:none;

	

	.famous-diamond__list{
			border:none;
			display:block;
			@include set-ulFix;
		 	li{
		 		overflow:visible;
		 		
		 		.famous-diamond__img{
		 			height:auto;
		 			position:relative;
		 		}
		 		
		 		img{
		 			margin:auto;
				}

				.famous-diamond__desc--para {
					@include font-color($primary-2);
					@include f(26);
					margin: auto;
					@include main-font;
					@include rem(padding, 100px 0 0 0);
				}
				
		 	}

		 	li:before{
				content: "";
				display: block;
				padding-top: 0; 	/* initial ratio of 1:1*/
			}

		}
		
	


	/* override  css with common styling */
	.more-button{
		text-transform:uppercase;
		@include font-color($primary-3);
		@include rem(padding, 20px 0 0 0);
		@include brand-font;

		.arrow-show{
			@include setSprite(14px, 15px, -577px, -20px);
		}
	}
}
