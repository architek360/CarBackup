.OverlayBoxContent {
    /*height:500px;
    overflow:auto;*/
    overflow: visible;
    width: 460px;
    @include f(12);
    text-align: left;
    .image {
        width: 80%;
        margin: 10px 8% 0 8%;
        img {
            width: 100%;
            height: 300px;
        }
    }
    .tooltip-div {
        margin-bottom: 20px;
    }
    h3 {
        @include f(14);
        @include bold-font;
        text-align: left;
        color: $primary-20;
        @include rem("margin", 0 0 20px 0);
        text-transform: uppercase;
    }
    h4 {
        @include f(12);
        @include bold-font;
        text-align: left;
        color: $primary-20;
        float: left;
        text-transform: uppercase;
    }
    p {
        @include f(11);
        line-height: 16px;
        text-align: left;
        padding-top: 10px;
        font-family: Georgia,Palatino,"Palatino Linotype",Times,"Times New Roman",serif;
        color: $primary-2;
    }
    table {
        width: 100%;
        text-align: left;
        border-collapse: collapse;
        @include rem("margin", 10px 0 20px 0);
        caption-side: top;
        color: $primary-2;
        font-family: Georgia,Palatino,"Palatino Linotype",Times,"Times New Roman",serif;
        clear: left;
        caption, td, th {
            padding: 2px 0px 3px 10px;
            vertical-align: middle;
            text-align: center;
        }
        th {
            color: $primary-20;
            text-transform: uppercase;
            @include f(11);
            border: 1px solid #A0A0A0;
            height: 15px;
            width: 22%;
            display: none;
        }
        td {
            border: none;
            text-align: left;
            color: $primary-2;
            height: 15px;
            width: 22%;
            @include f(11);
            white-space: nowrap;
            .check {
                @include f(12);
                margin: 0;
                width: 100%;
            }
        }
        .form-check {
            margin: 0;
        }
    }
    .cta-button , .cta-button.cta--red {
        width: 100% !important;
        @include rem("padding", 8px 0);
        @include f(11);
        .cta-button__input {
            @include f(11);
            letter-spacing: 1px;
        }
    }
    .cta-button__inner.cta--grey {
        background: #393939;
    }
    #amount p {
        text-align: center;
        font-weight: bold;
        @include f(13);
    }
    .input-arrow {
        display: inline;
        @include setSpriteDesktop(3px, 13px, -124px, -45px, transparent);
        position: relative;
        @include rem("top", -2px);
        @include rem("margin-right", 2px);
    }
}

#optional-services {
    @include rem("margin", 40px 0 0 0);
}