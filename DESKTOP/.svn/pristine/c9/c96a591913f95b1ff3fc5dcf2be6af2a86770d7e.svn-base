/*------------------------------------*\
    reg_step1 -- Mobile CSS
\*------------------------------------*/
/**
 * MODULE CONTAINER....main container (.pushs)
 * INNER BLOCK......inner items (ul, etc.)
 * HEADING BLOCK...... headings styling (.pushs__title)
 * DESCRIPTION BLOCK...... DESCRIPTION styling (.pushs__desc)
 * NORTON SECURED BLOCK ..... FOR NORTON SECURED ICON (.pushs__norton-secured)
 * NORTON ICON ..... ('.norton-icon' FROM /sass/_mobile.scss)
 * CREDIT CARD ICON ..... (E.G '.mastercard' FROM /sass/_mobile.scss)
 */

/*------------------------------------*\
    $MODULE CONTAINER
\*------------------------------------*/

.regform-step1 
{
	@include rem(padding, 20px 0);

	.heading2{
		border-bottom:none;
	}

	p.form-label{
		padding:0px;

		@include f(22);
	}


	& > div 
	{
	text-align: center;
	color: $white;
	}
	.regform-step1__regbox{
		border:solid 1px $dark_grey;
		overflow:auto;
		padding:0 30px;
		overflow:hidden;
		form{
			text-align:left;
		}
	}

	.grid__item{
		@include rem('padding',0px);
	}

	.form-label{
		text-transform: uppercase;
		margin-top: 45px;
		margin-bottom: 10px;
		@include bold-font;
	}
	.form-check{
		width:100%;
	}

	.regform-step1__account-status {
			text-transform:uppercase;
			letter-spacing:4px;

		.regform-step1__account-status__title {
			@include rem('margin-top',28px);
			font-size: 2.4rem;
			color: $primary-2;
			border: none;
			padding: 0;
		}

		.regform-step1__account-status__status {
			font-size: 3.4rem;
			color: $primary-2;
			border: none;
			padding: 2rem 0;
		}

	}
	.communi-check,.privacy-check{
		margin-top:20px;
		a{
				text-decoration: none;
				border-bottom: 1px solid $primary-2;
		}

		.form-check-label{
			width:98%;
			@include f(19);
			@include rem('margin-right',-50px);
		}
	}
	.privacy-check {
		@include rem(margin-left, -5px);

	}


	.submitbutton{
			text-align: center;
			display:inline-block;
			width:100%;
			@include rem('margin',40px 0);
	}

	.captcha{
		padding-top:0px;
		margin-top:-20px;
	}
	.userinfo{
		font-style: italic;
		font-size: 2.4rem;
		text-transform: none;
		@include main-font;
		text-align: left;
		letter-spacing:0px;
	}

	.radio-title{
		@include bold-font;
	}
}