/*------------------------------------*\
    Services pushes -- Desktop CSS
\*------------------------------------*/

.services{
	&.servicegrid{
			display: block;
    		@include rem('margin-top', 24px);
		}
	&.grid{
		&.servicegrid{
			display: inline;
		}
	}
}
.servicegrid{
	> .grid__item {
		@include rem('padding', 0 10px);
		@include rem('margin-bottom', 24px);
    	padding: 0 1.2rem;
	}
	img{
		height: auto;
		@include rem('max-height', 146px);
	    max-width: 100%;
	    width: auto;
	}
	.services__block{
		border: 1px solid $primary-6;
	}
	.services_block__text{
		display: table;
		@include rem('height', 146px);
	}
	.services_block__text{
		a{
			display: table-cell;
    		vertical-align: middle;
		}
	}
}
