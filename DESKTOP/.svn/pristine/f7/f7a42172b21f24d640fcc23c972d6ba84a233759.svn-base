/* repair service */
.repair-service{
	text-align: left;
	width:100%;
	@include rem('margin', 0 0 20px 0); 
	float:none;
	h4{
		@include f(25);
		@include bold-font;
		color:$primary-2;
		@include rem('margin', 0 0 5px 0);
	}
	.error{
		@include f(12);
		line-height: 4rem;

	}
	.notification {
		width:60%;
		margin:0 auto;

	}
	.heading{
			@include rem('margin', 0 0 50px 0);
			text-align: center;

			h4{
				@include f(25);
				@include rem('padding-top', 5px);
				@include rem('margin', 0 0 20px 0);
				color:$primary-2;
				
			}
			h5{
				@include rem('padding-bottom', 5px);
				@include f(20);
			}
	}
	.notification{
			float:none;
			width:100%;
			text-align:center;

		
		
		h4{
				@include rem('padding', 20px 0);
				@include rem('margin', 0 0 20px 0);
				color:$primary-2;
				border-top: 1px solid #4D4D4D;
				border-bottom: 1px solid #4D4D4D;
		}
		p{
			@include f(20);
		   @include rem('padding', 0 0 20px 0);
		   text-align: center;

		  }
		
		
	        
	        

	}
	.side-image{
		display: none;
	}

	
}
form.notification-number{
	width: 60%;
	margin:0 auto;
	.tooltip-div{
			display: none;
		}
 	label{
		color:$primary-3;
		@include f(22);
		@include rem('margin', 30px 0 10px 0);
		letter-spacing: .1em;	
		line-height:20px;
		text-align:left;
		@include bold-font;
		text-transform:uppercase;
	}
	.form-input{
		height:58px;
		padding:0;
		@include f(23);
		width:100%;
		float:left;
		}
	.cta-button {
		width: 100%;
		@include rem('padding', 20px 0 20px 0);
		@include rem('margin', 30px 0 0 0);
		.cta-button__input{
					@include f(20);
					letter-spacing: .2rem;
				   }
		.input-arrow{
				top:0;
			}
		}


}

.call-all .more-link{
	margin:0 auto; 
	width:100%;
	 text-align:center;
	  margin-top:20px}
.call-all .more-link a {

background: url("../../../../../../etc/designs/richemont-car/clientlibs/publish/Clientlibs_common/images/icons/red_bullet.png") no-repeat scroll 0 2px 

rgba(0, 0, 0, 0);
display: inline;
font-size: 1.3rem;
font-weight:bold;
height: auto;
letter-spacing: 0.2rem;
padding-left: 1.5rem;
text-align: center;
text-transform: uppercase;
vertical-align: middle;
}
.call-all .more-link a:hover{
color:#fff;
}


