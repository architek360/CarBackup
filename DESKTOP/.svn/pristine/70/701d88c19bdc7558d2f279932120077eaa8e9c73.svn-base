/*------------------------------------*\
  Refine-selector Component -- Desktop CSS
\*------------------------------------*/
.refine-selector{

	display: inline-block;
	position: relative;
	 margin-right: 20px;

	.refine-selector__title{
		color: #A0A0A0;
		font-size: 10px;
		font-weight: bold;
		letter-spacing: 0.1em;
		margin: 4px 0 0px;
		padding: 7px 0px 7px 7px;
		text-transform: uppercase;
		width: auto;
		display: inline-block;
		cursor: pointer;
		h2 {
			font-size: 10px;
		}
		.double-arrow {
			@include setSpriteDesktop(20px, 20px, -422px, -312px, transparent);

		}



    }
    .is-deployed {
		background-color: $primary-113;
	}

	.refine-selector__content {
	background-color: $primary-113;
    left: 0;
    overflow: hidden;
    position: absolute;
    top: 27px;
    width: 250px;
    z-index: 10;
    display: none;
    	p{
    		text-align:center;
    	}
    	.more-arrow {
			@include setSpriteDesktop(170px, 14px ,110px ,-85px, $primary-113);
			background-color: $primary-113;
		    bottom: 0;
		    color:  $primary-113;
		    cursor: pointer;
		    display: block;
		    left: 0;
		    @include rem('padding', 5px 0 15px);
		    position: absolute;
		    text-align: left;
		    width: 100%;
		    
		}

		.less-arrow {
		    @include setSpriteDesktop(170px, 7px ,106px ,-67px, $primary-113);
		    cursor: pointer;
		    display: none;
		    color:  $primary-113;
		    left: 0;
		    @include rem('padding', 15px 0 5px);
		    position: absolute;
		    text-align: left;
		    top: 0;
		    width: 100%;
		    z-index: 2;
		    background-color: $primary-113;
		}

		.va-nav span{
			z-index:100;
		}	
	    ul {
	    	/*width: 100%;*/
	    	padding: 10px;
	    	/*position: absolute;*/

		    

	    	li {
	    		border-top: 1px solid $primary-120;
			    @include proxi-font;
			    font-size: 10px;
			    font-weight: bold;
			    letter-spacing: 0.1em;
			    /*height: 25px;*/
			    max-height: 15px;
			    text-transform: uppercase;
			    padding: 10px 0;

			    &:first-child{
			    	border-top:none;
			    }

			    a {
			    	color: $primary-3;
			    	@include proxi-font;
				    @include f(10);
				    font-weight: bold;
				    letter-spacing: 0.1em;
				    text-transform: uppercase;
				    transition: color 0.2s ease-in-out 0s;
				    position: absolute;
   					top: -2px;

				    &:hover {
				    	color: $primary-2;
				    }
			    }
	    	}
	    	span {
	    		 cursor: pointer;
    			display: inline-block;
    			float: right;
    			cursor: pointer;
    			margin: 7px 0 0;
    			vertical-align: middle;
			    @include setSpriteDesktop(20px,	 10px, -30px, -422px, transparent);	    

			    input {
			    		background: none repeat scroll 0 0 rgba(0, 0, 0, 0);
					    display: inline-block;
					    opacity: 0;
					    vertical-align: top;					
					    height: 12px;
					    width: 14px;
			    }
	    	}
	    	span.checked {
	    		 @include setSpriteDesktop(20px, 15px, -106px, -417px, transparent);	
	    		 margin-top: 0px;

	    	}

	    }
		.sub-menu {
		    background:$primary-113;
		    margin: 0;
		    @include rem('padding', 10px 10px 0);
		    /*padding: 0 10px;*/
		    position: absolute;
		    width: 90%;
		    @include rem('margin', 10px 0);

		    li {
		    	color: $primary-2;
			    width: 95%;
			    text-transform: uppercase;
				position:absolute;
				label{
					margin-top: -12px;
					display: table;
					width: 100%;
					color: $primary-3;
					.js-refine-checkbox{

					}
				}
			    &:hover{
					color: $primary-49;
				}
			}

			.first{
				/*border-top: none;*/
			}
		}
	}
	
}