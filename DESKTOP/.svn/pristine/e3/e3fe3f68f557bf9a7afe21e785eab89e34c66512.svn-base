/*------------------------------------*\
    REQUEST INFO BLOCK -- Mobile CSS
\*------------------------------------*/
/**
 * MODULE CONTAINER....main container (.request_info)

 */

/*------------------------------------*\
    $MODULE CONTAINER
\*------------------------------------*/
.request_info{
	border:1px solid $primary-17;
	@include f(20);
	@include rem('padding',85px 24px 30px 24px);
	@include rem('margin',20px 0 0px 0);
	display:inline-block;
	text-transform:uppercase;
	width: 100%;
	text-align:left;
	@include font-color($primary-2);
	 -moz-box-sizing: border-box;
	box-sizing: border-box;
	background:$primary-1;
	.grid__item{
		@include rem('padding',0px);

		label{
			@include bold-font;
			@include f(22);
		}
		.radio-btn{
			@include rem('padding',0 0 33px);
			@include rem('margin',15px 0 0px);
		}
		.radio-btn + span {
			@include rem('margin',-29px 0 0px);
		}
		.radio-btn-li {
			label {
				@include bold-font;
				@include f(22);
			}
		}

		.form-check{
			margin-left: 18px;
			width:105%;
			@include main-font;
			font-style:italic;
			.form-check-label{
				width:80%;
			}
		}

		&:last-child{
			padding:0;
		}
		.radio-btn{
			@include rem('padding',0 0 33px);
			@include rem('margin',15px 0 0px);
		}
		.radio-btn + span {
			@include rem('margin',-29px 0 -0px);
		}
	}

	.grid__item--row{

		@include rem('min-height',120px);

		input + span {
			height: 35px
		}
	}
	
	.grid__item--pad{
		@include rem('padding',0 0 25px 0);
	}
	.grid__item--pad20{
		@include rem('padding',0 0 20px 0);
	}
	
	.mandatory{
		color:$primary-2;
	}
	.privacy-check{
		text-transform:none;
	
	}

	.privacy-check__label{
		display:block;
		width:100%;
	}
	.radio-conpref{
		ul{
			li{
				margin-right:93px;
			}
		}
	}

	.cta--red-width-auto-pad-20 {
		@include rem('padding',15px 40px 15px 0);
	}
	/* captcha div css override*/
.captchaDiv {
	.captcha {
		padding :0;
	}
	.img {
		float: none;
	}
}
}
