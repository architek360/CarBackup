.repair-service {
    border: 1px solid $primary-61;
    text-align: left;
    width: 100%;
    @include rem("margin", 0 0 40px 0);
    display: inline-block;
    @include rem("padding", 30px);
    .error {
        @include f(12);
        line-height: 2rem;
    }
    .heading {
        @include rem("margin", 0 0 50px 0);
        text-align: center;
        h4 {
            @include f(15);
            @include rem("padding-top", 5px);
            @include rem("margin", 0 0 5px 0);
            color: $primary-2;
            border: none;
        }
        h5 {
            @include rem("padding-bottom", 5px);
            @include f(12);
            color: $primary-2;
            font-style: italic;
            font-family: Georgia,Palatino,"Palatino Linotype",Times,"Times New Roman",serif;
        }
    }
    .notification {
        display: inline-block;
        width: 45%;
        text-align: left;
        vertical-align: top;
        @include rem("padding", 70px 0 0 30px);
        h4 {
            @include f(13);
            @include bold-font;
            color: $primary-20;
            @include rem("margin", 0 0 0 0);
            border: none;
            text-align: left;
            letter-spacing: .1rem;
        }
        p {
            text-align: left;
            @include f(11);
            line-height: 1.5rem;
            font-family: Georgia,Palatino,"Palatino Linotype",Times,"Times New Roman",serif;
        }
        form {
            width: auto;
            margin: 0;
        }
        .notification-number {
            .one-whole {
                width: 249px;
            }
            .tooltip-div {
                display: block;
            }
        }
        .notification__desc {
            p {
                font-family: Georgia,Palatino,"Palatino Linotype",Times,"Times New Roman",serif;
                @include f(11);
                letter-spacing: .1em;
                font-style: normal;
                text-align: left;
                line-height: 1.5rem;
            }
        }
        label {
            color: $primary-2;
            @include f(10);
            @include rem("margin", 0 0 0 0);
            letter-spacing: .1em;
            line-height: 25px;
            text-align: left;
            text-transform: uppercase;
            display: inline;
        }
        .form-input {
            height: 30px;
            padding: 0;
            font-size: 1.1rem;
            width: 218px;
            display: inline-block;
        }
        .cta-button {
            width: 26%;
            @include rem("padding", 10px 0 10px 0);
            @include rem("margin", 20px 0 0 0);
            .cta-button__input {
                @include f(11);
                letter-spacing: .2rem;
            }
            .input-arrow {
                top: -2px;
            }
        }
        .from_row {
            width: 300px;
            display: inline-block;
            .form_row_inner {
                width: 218px;
                float: left;
            }
        }
    }
    .side-image {
        display: inline-block;
        width: 450px;
        height: 330px;
        @include rem("margin-left", 30px);
        @include rem("margin-top", 30px);
        img {
            width: 450px;
            height: 330px;
        }
    }
    .call-all .more-link a {
        @include f(11);
        color: $primary-3;
    }
    .call-all .more-link a:hover {
        @include f(11);
        color: $primary-2;
    }
}

.one-whole .tooltip-div {
    @include rem("margin-top", 32px);
}