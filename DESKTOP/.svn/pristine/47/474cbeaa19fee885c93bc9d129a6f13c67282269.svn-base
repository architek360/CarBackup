/*------------------------------------*\
    SET FOR YOU-SLIDER -- Desktop CSS
\*------------------------------------*/

/**
 * MODULE CONTAINER.... (#sfy-slideshow)
 */

/*------------------------------------*\
    $MODULE CONTAINER
\*------------------------------------*/
#sfy-slideshow {
	@include proxi-font;
	position: relative;
	min-height: 58rem;
	
		.carousel {
			background: $primary-1;
			min-height: 58rem;
				.bx-wrapper {
					.bx-viewport {
						background: $primary-1;
					}
				}
		}
	
}

#sfy-slideshow {
	.grid__item.one-third {
		@include rem(margin, 90px 0 0 90px);
	    width: 235px !important;
	}
	.two-thirds {
		width: 420px !important;
		float:right;
		@include rem(margin, 20px 100px 0 0);
		
	}
	.carousel {
		.info_pic {
			margin-left: 5rem;
		}
	}
	
}

.zoom-image {
    height: 420px;
    position: fixed;
    text-align: center;
    top: 0;
    width: 420px;
    z-index: 99999;
}
.zoom-image {
	img {
    	cursor: url($path-images +'icons/zoom-cursor-moins.png'), pointer;
	    display: none;
    	position: relative;
	    width: 100%;
    	z-index: 5;
	}
}

#sfy-slideshow {
	.grid__item.two-thirds.info__pic {
		.zoom-cursor {
		    cursor: url($path-images +'icons/zoom-cursor-plus.png'), pointer;
		}
	}
}

#cboxOverlay {
	.close-popin {
    	cursor: pointer;
	    position: fixed;
    	right: 10px;
    	top: 10px;
	}
}
#cboxOverlay {
	background: none repeat scroll 0 0 $primary-1;
    left: 0;
    overflow: hidden;
    position: absolute;
    top: 0;
    z-index: 99999;
}
#cboxOverlay {
    height: 100%;
    position: fixed;
    width: 100%;
	display:none;
}
.zoom-trigger-link {
	border: 0;
	font: 0/0 a;
	text-shadow: none;
	color: transparent;
	background: url($path-images +'icons/buttons.png') no-repeat 0 -250px;
	display: block;
	height: 20px;
	width: 19px;
	right:102px;
	bottom:15px;
	position:absolute;
	z-index:10;
}
.center-loader {
    left: 50%;
    @include rem(margin, -16px 0 0 -16px);
    position: absolute;
    top: 50%;
}

.sl-previous, .sl-next {
	width: 14px;
	height: 27px;
	position: absolute;
	top: 50%;

	text-shadow: none;
	/*color: transparent;*/
	z-index: 10;
	overflow: hidden;
}
.sfy-slideshow__pane {
	@include rem(margin-top, 10px);
}
.model__name {
	@include f(14);
	@include rem('line-height', 20px);
	@include rem(margin, 18px 0 20px 0);
	font-weight: bold;

	letter-spacing: .1em;
}
.model__description {
	@include f(13);
	font-weight: normal;
	font-style: italic;

	letter-spacing: .1em;
}
.model__name, .model__description {
	text-align: left;
	@include font-color($primary-2);
}
.model__summary {
	@include rem('line-height', 15px);
	@include f(12);
	@include font-color($primary-2);

	font-family: $primary-font-2;
}
.model-type {
	@include rem(margin, 34px 0);
	@include font-color($primary-44);

	li {
		@include rem(margin, 8px 0);
		@include rem('line-height', 16px);
		@include f(12);

		text-transform: uppercase;
		width: 150px;
		
		letter-spacing: .1em;
	}
	.radio {
		@include rem(margin-right, 8px);
		width: 15px;
		height: 15px;

		float: left;
		vertical-align: middle;
	}
}
.model-type__platinum, .model-type__yellow-gold {
	width: 10px;
	height: 10px;
	@include rem(margin,3px 0);

	float: right;
}
.model-type__platinum {
	background-color: #bebebe;
}

.model-type__yellow-gold {
	background: #e0b570;
}
.red-button {
	@include rem(padding, 8px 13px 8px 26px);
	@include f(12);
	text-align: center;
	text-transform: uppercase;
	font-weight: bold;
			
	@include font-color($primary-40);
	letter-spacing: .1em;
	display: inline-block;
	background: #8f010f url($path-images +'icons/arrows-white.png') no-repeat 12px 13px;
	&:hover {
		background-color: $primary-5;
	}	
}


