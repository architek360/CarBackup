/*------------------------------------*\
    billing payment option - tab card payment -- Desktop CSS
\*------------------------------------*/
/**
 * MODULE CONTAINER..(.billing-confirmation)
 * CONFIRMATION BLOCK    (.conf, etc)
 */

/*------------------------------------*\
    $BILLING CONFIRMATION BLOCK
\*------------------------------------*/
.my-billing-address-content-wrapper
 {
.billing-payment-option {
		@include main-font();
		background: $primary-82;
		@include rem('padding-top', 0px);
		@include rem('padding-bottom', 0px);
		@include rem('padding-left', 35px);
		@include rem('padding-right', 35px);
	
.heading__desc 
	{
		border-bottom: 1px solid $primary-84;
	}

.tab-card-payment {
	text-align: center;
		


		.select-wrapper{
			.selector.formerror {
			    background-position: -427px -1325px;

			    span {
				    background-position: right -1283px;
				}
				option {
				    background-color: $primary-70;
				    color: $primary-71;
				}
			}
		}


		.tab_card_inner-block{
			width: 450px;
			@include rem('width', 450px);
			@include rem('margin-bottom', 30px);
			display:inline-block;
			margin:0 auto;


			.one-whole grid__item {
				padding-left: 0;
			}

		}
		
		label {
			@include f(10);
			display: block;
			width: auto;
			float: left;


		}
		input {
			background: $primary-105;
			border: 1px solid $primary-79;
		}
		.card-type {
			background: none;
			height: auto;
			@include rem('padding',48px 0 0 0);
			.card-type__title {
				@include f(10);
				text-align: left;
				@include rem('margin',10px 0);
			}

			ul.cc-name-selector {
				text-align: center;
					li {
					background: none;
					width: 16%;
					border: none;
					display : inline-block;
					@include rem('padding',14px 0);
					div.radio {
						span {
							background-position: -195px -432px;	
							@include rem('height', 18px);
						}
						span.checked {
							background-position: -218px -432px;	

						}
					}
					label.radio-title {
						@include rem('padding-top',10px);
						padding-left: 0;
					}
					span {
						@include rem('width', 18px);
						@include rem('margin-left', 0px);
						
					}
					div {
					
						@include rem('width', 26px);
						float: left;
					}
					span.mastercard , .visa_card , .discover_network_card , .jsb_card , .american_express_card , .diners_club_card {
							
							@include rem('width', 35px);
							float: left;
					}
				}
				
			}
		}
		.confirmation {
			
			@include rem('width', 400px);
			margin: 0 auto;
			float: none;
			label {
				width: auto;
				float: 	left;
				@include rem('padding-top', 2px);
			}
			span.error {
				background: none;
				display: block;
				width: auto;
				position: absolute;
			}

		}

		
		.first-name {
			float: left;
			@include rem('width', 175px);
			height: auto;
			.one-whole {
				label {
					@include rem('margin', 0px);
					@include rem('padding', 0px);
				}
			}
		}

		.expiration-date {
			background: none;
			float: right;
			width: 50%;
			@include rem('height', 50px);
			@include rem('margin-bottom', 0px);
			
			.selector {
				width: 99px!important;
				background-position: -430px -635px;
				span {
				background-position: right -536px;
				width: 94px!important;
			}
		}
		ul {
			overflow: inherit;
		}
		}
		.ccv  {
			width: 30%;
			float: left;
			height: auto;
			
			@include rem('padding-top', 20px);
			.grid__item {
				padding-left: 0;
			}

		}
		.name-on-card {
			width: 70%;
			float: right;
			height: auto;
			@include rem('padding-top', 20px);
		}
		
		.tab-card-payment__info {
			@include f(13);
			color: #fff;
			text-align: center;
			@include rem('letter-spacing', 0px);
			float: left;
			width: 100%;
			border-top: 1px solid $primary-79;
			@include main-font;
		}

	}
	}


	/*tab for card payment start*/

.radio-btn {
	background: $primary-85;
	text-align: center;
	@include rem('padding-top', 15px);
		@include rem('padding-bottom', 15px);
		@include rem('padding-left', 0px);
		@include rem('padding-right', 0px);
		div.radio {
		float: left;
	}
	li {
		@include rem('padding-left', 25px);
		@include rem('padding-right', 30px);
		
		span {
			background-position: -195px -432px;
			@include rem('height', 18px);
		}
		span.checked {
			background-position: -218px -432px;
			@include rem('height', 18px);
		}
	}
	 
		label {
			@include rem('padding-top', 5px);
			@include rem('padding-left', 10px);
			@include f(14);
			float: left;
	}
}
;

	/*tab for card ayment start*/
}