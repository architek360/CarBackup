.conf {
  width: 40%;
  margin: 10px auto 30px;
  padding: 10px 0;
  background: #2c0404;
  span {
    padding-bottom: 8px;
    font-size: 10px;
    display: block;
  }
.conf-title {
    font-size: 11px;
    font-weight: bold;
    padding-bottom: 14px;
  }
.conf-days {
  font-weight: bold;
  padding-bottom: 14px;
}
.conf-text{
  color: #A0A0A0;
  font-style: italic;
  }
}