/*------------------------------------------------------------------------------*\
    ECS REPAIR SERVICE 
    TAB : SEND MY CREATION TO THE REPAIR CENTER -- DESKTOP CSS
\*------------------------------------------------------------------------------*/
/**
 * MODULE CONTAINER....main container (.tab_repair_service)
 */

/*------------------------------------*\
    $MODULE CONTAINER
\*------------------------------------*/

.tab_repair_service{
	.repair-service{
		.notification.ecs-repair-send-creation{
			@include rem('padding', 0px);
		}
		h2{
			@include f(13);
			@include font-weight(bold);
			color: $primary-3;
			text-transform: uppercase;
		}
		h3{
			text-align: left;
			text-transform: uppercase;
			@include f(15);
			@include font-weight(bold);
			span{
				color: $primary-3;
			}
			color: $primary-47;
			@include rem('padding', 15px 0);
		}
		p{
			@include rem('padding', 5px 0);
			font-style: italic;
		}
		.address-box{
			@include rem('padding', 15px 0);
			.address-box__name{
				text-transform: uppercase;
				font-style: normal;
				@include proxi-font;
			}
			p{
				color: $primary-3;
				@include rem('padding', 0 0);
			}
		}
		a.telno{
			color: $primary-76;
			@include main-font;
		}
	}
}
.registration_page{
	 .ecsstep2{
	 	 .notification{
	 	 	@include rem('padding-top', 5px);
	 	 }
	 }
}
.repair-service{
	.address-box{
		p{
			font-style: normal;
		}
		.addressrow{
			p{
				display: inline;
				@include rem('margin-right', 5px);
			}
		}
	}
}
.address-box *:first-child{
	@include proxi-font;
    letter-spacing: 1px !important;
    text-transform: uppercase;
}
.address-box + .comp-rich-text p b {
    color: $primary-76;
    font-weight: bold;
}