/*------------------------------------*\
    BILLING ADDRESS CONFIRMATION -- Mobile CSS
\*------------------------------------*/
/**
 * MODULE CONTAINER (.billing-confirmation)
 * HEADING CONTAINER (.heading2)
 * ADDRESS DETAILS (.billing-confirmation__address)
 * ACTION BUTTON (.cta--red)
 */


/*------------------------------------*\
    $MODULE CONTAINER
\*------------------------------------*/
.billing-confirmation{
	@include brand-font;
	@include font-color($primary-2);
	display: block;
	margin:0 auto;
	text-align: center;

  .edit-footer__edit {
	    margin-top:16px;
	    @include f(22);
        border-top: 1px solid $primary-11;
        @include rem('padding', 19px 20px);
        @include rem('line-height', 30px);
        text-transform:uppercase;
        @include bold-font;
        text-align: right;
		.edit-address {
		    text-align: right;
		    @include bold-font;
		    width: 49%;
		    display: inline-block;
		    span{
		    	display:inline;
		    }
		    .edit-icon {
		        @include setSprite(27px, 29px, -730px, -134px);         
		        display: inline-block;
		        @include rem('height', 15px);
		        @include rem(margin, 0 0 0 5px);
		        border-left:1px solid $primary-8;
		        position:relative;
		        top:-1px;
		  }

		}
		.addnew-address {
		    text-align: left;
		}

	}
	/*------------------------------------*\
    		$HEADING CONTAINER 
	*------------------------------------*/
	.heading2{
		border:none;
		letter-spacing:3px;
		@include rem(padding, 24px 0 30px);
		line-height:39px;
	}

	.billing-confirmation__desc {
		@include main-font;
		letter-spacing:2px;
		display: inline-block;
		text-align: center;
		@include f(26);
		@include rem('padding', 0 0 40px 0);
	}

	/*------------------------------------*\
    		$ADDRESS DETAILS
	\*------------------------------------*/
	.billing-confirmation__address{ 
		display: inline-block;
		text-align: center;
		border:1px solid $primary-3;
		background: $primary-16;
		width: 100%;	
		@include rem('margin', 2px 0 39px 0);
		@include rem('padding', 38px 0 0 0);
		@include rem('line-height', 30px);
		@include f(22);
		@include main-font;

		 span{
		 	display: block
		 	 }
	}

	/*------------------------------------*\
    			$ACTION BUTTON
	\*------------------------------------*/
	.cta--red {
		@include rem('margin-top', 20px);
		@include rem('margin-bottom', 40px);
		clear:both;
		width:68%;
		
	}
	.checkboxconf{
		text-align: left;
		.form-check-label{
			width: initial;
		}
	}
}

