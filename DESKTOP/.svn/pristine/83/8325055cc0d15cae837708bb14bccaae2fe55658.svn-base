/*------------------------------------*\
    Progress bar -- Desktop CSS
\*------------------------------------*/
/**
 * MODULE CONTAINER....main container (.progressbar)
 * TITLE CONTAINER......headings for component (.progressbar__title)
 * CIRCLUAR BLOCK......NUMBERED 1,2,3,4 block (.progressbar__circle-on, progressbar__circle-off)
 */

/*------------------------------------*\
    $MODULE CONTAINER
\*------------------------------------*/
.desktop-progressbar{
	color: white;
	width: auto;
	display: inline-block;
	@include set-ulFix;
	margin:0 auto 10rem;
	/*height: 260px;*/
	text-transform:uppercase;
	@include f(10);
	@include rem(padding-top,15px);
	@include rem('margin-bottom',5px);
	text-align: center;
	float: left;
    min-width: 570px;
    text-align: left;
    width: auto;
	
		
		li{
	
			display: inline-block;
		    height: 25px;
		    padding-right: 20px;
		    width: auto;
		    a {

		    	cursor: pointer;



				span{
					@include rem(width,25px);
					@include rem(height,25px);
					line-height: 25px;
					border-radius: 50%;
					display: inline-block;
					text-align: center;
					@include rem('margin-bottom',25px);
					@include proxi-font;
					font-weight: bold;
					@include f(14);
				    color: $primary-2;
				    display: inline-block;
				    float: left;
				}

				 p{
					vertical-align:middle;
					height: 45px;
					@include proxi-font;
					font-weight:bold;
					letter-spacing:1px;
					background: none;
					text-align: center;
					@include f(10);
					color: $primary-75;
				    float: left;	
				    height: 16px;
				    margin-left: 8px;
				    padding: 3px 0 0;
				}
			}
		}

		.progressbar__circle-on {
			span {
				background-color: $primary-2;
				color: $primary-75;

			}
			p {
				color: $primary-74;

			}
		}
		.progressbar__circle-off {
			span {
				background-color: $primary-75;
				color: $primary-1;

			}
			p {
				color: $primary-75;

			}
		}
	}

	h3{
			text-align: center;
			@include rem(font-size,34px);
	}
	.progressbar__title {
		border: none;
	}

	.progressbar__circle-on{
		span{
			background-color: $white;
		}
		h4{
			color: $white;
		}

	}
	.progressbar__circle-off{
		pointer-events: none;
        cursor: default;
		span{
		background-color: $light_grey;
		}
		h4{
			color: $light_grey;
		}

	
}

