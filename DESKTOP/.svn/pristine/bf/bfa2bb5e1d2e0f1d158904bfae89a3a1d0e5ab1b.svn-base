/*------------------------------------*\
    Login view -- Desktop CSS
\*------------------------------------*/



.js-login-form {

	
	hr {
		@include rem('margin',20px 0px);
		 position: relative;
	}
	.txt, .comp-rich-text {
		p {
			@include main-font;
			@include f(12);
			letter-spacing: normal;
			text-align: center;
			line-height: 16px;
		}
		label {
			color: #FFFFFF;
		    display: block;
		    font-family: proximanovaBold,sans-serif;
		    font-size: 1rem;
		    letter-spacing: 0.1rem;
		    margin-bottom: 0.5rem;
		    text-align: left;
		    text-transform: uppercase;
		    width: 100%;
		}
	}
	.heading4 {
	 	font-family: proximanova,sans-serif;
	    font-size: 1.5rem;
	    font-weight: normal;
	    letter-spacing: 0.1rem;
	    margin-bottom: 0;
	    text-transform: uppercase;
	    text-align: center;
	    text-align: center;
	}

	.heading6 {
	 	font-family: proximanovaBold,sans-serif;
	    font-size: 1rem;
	    letter-spacing: 0.12rem;
	    margin-bottom: 1rem;
	    padding: 0rem;
	    text-align: center;
	    text-transform: uppercase;
	}

	a {
		background: url("../../../../../../etc/designs/richemont-car/clientlibs/publish/Clientlibs_desktop/images/icons/sprite-desktop.png") no-repeat scroll -431px -156px #000000;
	    bottom: 0.2rem;
	    color: #A0A0A0 !important;
	    display: inline-block;
	    float: right;
	    font-family: proximanovaBold,sans-serif !important;
	    font-size: 10px !important;
	    height: 10px;
	    letter-spacing: 0.1rem;
	    line-height: 1.4rem;
	    margin-right: 0.9rem;
	    padding-left: 10px;
	    position: relative;
	    text-align: right;
	    text-decoration: none !important;
	    text-transform: uppercase;
	    vertical-align: middle;
	    width: auto;
	}

	hr {
		margin: 20px 0;
	}
}

