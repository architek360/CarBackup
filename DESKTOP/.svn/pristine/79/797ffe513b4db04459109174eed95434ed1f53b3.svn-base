/*------------------------------------*\
    Reg Step 1 -- Desktop CSS
\*------------------------------------*/
/**
 * MODULE CONTAINER....main container (.regform-step1)
 * INNER BLOCK......inner items (.regform-step1__regbox)
 * HEADING BLOCK...... headings styling (.heading2)
 * DESCRIPTION BLOCK...... DESCRIPTION styling (.userinfo)
 * INPUT BLOCKS .....  (.form-element .input-wrapper )
 * CAPTCHA BLOCK ..... ('.captcha)
 * CHECKBOX BLOCKS ..... (.form-element .checkbox-wrapper)
 */




.js-reg-step-1 {


	hr {
		
		 @include rem('margin',16px 0);
		  position: relative;
	}

	.txt, .comp-rich-text {
		p {
			@include main-font;
			@include f(12);
			letter-spacing: normal;
			text-align: center;
			line-height: 16px;
		}

		label {
			color: #FFFFFF;
		    display: block;
		    font-size: 1rem;
		    letter-spacing: 0.1rem;
		    margin-bottom: 0.5rem;
		    text-align: left;
		    text-transform: uppercase;
		    width: 100%;
		}
	}
	.heading4 {
	    font-size: 1.5rem;
	    font-weight: normal;
	    letter-spacing: 0.1rem;
	    margin-bottom: 0;
	    text-transform: uppercase;
	    text-align: center;
	}

	.heading6 {
	 	@include proxi-font;
	    font-size: 1rem;
	    letter-spacing: 0.12rem;
	    margin-bottom: 1rem;
	    padding: 0rem;
	    text-align: center;
	    text-transform: uppercase;
	}
	.checkbox-wrapper .form-checkbox-label{
		@include main-font();
		color: #ccc;
		text-transform: none;
		@include f(12);
		@include rem('margin-top',3px);
	}

}

