/*------------------------------------*\
    $IMPORT - Themes Styles
\*------------------------------------*/

.js-reg-step-3 .fn_addrname .form-input {
    width: 100%;
}
.js-reg-step-3 {
    .fn_addrname {
        width: 44%;
        float: left;
    }
    .fn_strname {
        clear: left;
    }
    .fn_state {
        width: 47% !important;
    }
    .fn_addrinfo {
        width: 44% !important;
    }
    .fn_phno {
        clear: none !important;
    }
    .regstep3-col4 {
        float: left;
    }
    #fn_zip {
        width: 189px !important;
    }
    .fn_city {
        margin-left: 14px;
    }
}
.js-address-form {
    .addressLabel, .addressform_address6, .addressform_zip, .addressform_address9 {
        width: 46%;
        .form-input {
            width: 100%;
        }
    }
    .addressform_address2 {
        margin-left: 8px;
        margin-top: 15px;
    }
    .addressform_address5 {
        clear: left;
        width: 46%;
        margin-top: 15px;
    }
    .addressform_address7, .addressform_address6 {
        clear: none;
        margin-left: 8px;
    }
}
