/*------------------------------------*\
    SUBSCRIPTION AND INTRESTS -- Mobile CSS
\*------------------------------------*/
/**
 * MODULE CONTAINER....main container (.subscription)
 * RECEIVE CARTIER NEWS BLOCK....personal details (.receive-news)
 * PRODUCT INTRESTED BLOCK....birthday details (.product-int)

 */

/*------------------------------------*\
    $MODULE CONTAINER
\*------------------------------------*/

@mixin common-style(){
	border:1px solid $primary-17;
	@include f(20);
	@include rem('padding',20px 20px 10px);
	display:inline-block;
	text-transform:uppercase;
	@include box-sizing(border-box);
	line-height:22px;
}

@mixin sub-form(){
	display:block;
	width:100%;
	@include f(20);
	display:inline-block;
}
.subscription{
	@include brand-font;
	@include font-color($primary-2);
	display: block;
	width: 81.25%;
	margin: 0 auto;

	.heading2{
		@include f(28);
		border-bottom:none;
		@include rem(padding, 20px 0 22px 0);
	}

	.heading3{
		@include medium-font;
		@include f(28);
		@include rem(padding, 25px 20px 10px);
		text-transform:uppercase;
		text-align:center;
		border-top:1px solid $primary-3;
		display:table;
		margin:0 auto;
		line-height:32px;
		width: 60%;
	}

	.subscription__welcome-image{
		height: 100%;
 		width: 100%;
 		height: 238px;
  		background:url($path-images+"/content/subscription_welcome.jpg") no-repeat;
  		background-size:cover;


		img{
			height:auto;
			width:100%;
		}
	}

	.grid__item{
			@include bold-font;
			@include rem('padding',0px);
			label{
				@include brand-font;
			}

			&:last-child{
				padding:0;
			}
	}

	.grid__item--row{

		@include rem('min-height',120px);

		input + span {
			height: 35px
		}
	}
	
	.grid__item--pad{
		@include rem('padding',0 0 30px 0);
	}
	
	/*------------------------------------*\
	    $RECEIVE CARTIER NEWS BLOCK
	\*------------------------------------*/

	.receive-news{
		@include linear-gradient(135deg, #000000 0%, #010000 73%, #460000 100%);
		@include common-style;
		@include rem('margin',5px 0 24px 0);

		.receive-news__list{
			@include set-ulFix;
			@include rem(padding, 50px 0 0);

			li{
				display:inline-block;
				vertical-align: top;
				line-height:22px;

				.form-check{
					@include sub-form;
				}

				.form-check-label{
					width:84%;
				}
			}
		}
	}

	/*------------------------------------*\
	    $RODUCT INTRESTED BLOCK
	\*------------------------------------*/

	.product-int{
		@include linear-gradient(135deg, #000000 0%, #010000 73%, #460000 100%);
		@include common-style;
		@include rem('margin',5px 0 27px 0);

		.product-int__list{
			@include set-ulFix;
			@include rem(padding, 24px 0 0);

			li{
				display:inline-block;
				vertical-align: top;
    			width: 49%;
    			height:69px;
    			line-height:22px;

				.form-check{
					@include sub-form;
				}
				.form-check-label{
					width:70%;
				}
			}

			li:last-child{
				height:54px;
			}
		}
	}

	.form-check-label{
		@include rem(padding-top, 2px);
	}
	.button-wrapper{
		text-align:center;
		clear:both;
		.cta-button{
			margin: 10px auto;
		}
	}
}

.device-s4{
	.subscription{
		.form-check-label{
			@include rem(padding-top, 3px);
		}
	}
}

/**********REQUEST INFO STYLING ****************/
.requestInformation_checkbox_val{
	@include rem(padding, 20px 0);
}

.js-request-info-form .checkbox-wrapper .form-checkbox-label .checkbox-name{
	width: 95%;
	font-style: italic;
	margin-top: 7px;
	line-height: 22px;
}

.js-request-info-form .cq-colctrl-lt0-c0 .group-wrapper{
	display: inline-block;
	margin-top: 30px;
}

._content_car_global_langmaster_en_services_contactbyambasador_jcr_content_navigationBlock_formbuilder_start fieldset{
	min-width: 100%;
}
/**********FORGOT PASSWORD STYLING ****************/
.js-forgotpassword{
	position:relative;
	background: $primary-1; 
	@include linear-gradient(-45deg, #000000 0%, #010000 73%, #460000 100%);
	border: 1px solid #464646;
	@include rem('padding', 20px 0px);
	width:82.25%;
    margin:0 auto;
    .form{
    	@include rem('padding', 0 40px 25px);
	}

	a{
		bottom:8px;
	    clear:both;
	    display:table;
	    color: $primary-2;
	    height:30px;
	    left:46.5%;
	    margin:0 auto;
        position:absolute;
        text-align:center;
        text-decoration:none!important;
        font-size: 20px!important;
		text-transform: uppercase;
		@include brand-font();
	}
}

/**********ASK FOR AN APPOINTMENT STYLING ****************/
.js-ask-appointment-form{
	width:82.25%;
    margin:0 auto;

    .select-wrapper{
    	display: inline-block;
    }

    .group-wrapper{
		display: inline-block;
		margin-top: 30px;
		width: 100%;

		.checkbox-wrapper{
			width: 100%;
			 .form-checkbox-label{ 
			 	color: $primary-2;
			 	width: 100%;
				 	.checkbox-name{
					width: 85%;
					font-style: italic;
					margin-top: 7px;
					line-height: 22px;		
				}
			}
		}
	}
}

/**********SEND EMAIL STYLING ****************/
.send_email{
	width:82.25%;
    margin:0 auto;
    background-color: #262628;

    .form{
		padding: 30px 24px;
	}

	.checkbox-wrapper{
		width: 100%;
		.form-checkbox-label{
			width: 100%;
			color: $primary-2;
			font-style: italic;
		}
	}
}