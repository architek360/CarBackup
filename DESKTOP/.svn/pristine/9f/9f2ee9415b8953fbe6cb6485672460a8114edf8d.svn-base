/*------------------------------------*\
    Shopping Bag PopUp -- Desktop CSS
\*------------------------------------*/


.js-pop-up-content-wrapper{
	display:none;
}

#pop-up-content-wrapper{
	position:absolute;
	@include rem('top', 25px);
	@include rem('right', 15px);
	@include rem('width', 315px);
	height:auto;
	z-index:100;
	background-color: $primary-2;


 	.header_bag{
		background-color: #cccccc;
		@include rem('padding', 15px 0px 15px);
		text-align: center;
		@include rem('margin-bottom', 0px);
		@include font-color($primary-2);
		border-bottom: 1px solid $primary-96;
		@include proxi-font();
		@include f(15);
		display:block;
		width:inherit;
	}

	.wrapper-items {
	    background:white;
	    position:relative;
	    display: block !important;
	    margin: 0;
	    overflow: hidden;
	    padding : 0;
	    width:inherit !important;
	    z-index: 9999;
	    min-height: 140px;
	    padding:20px 0;
	}

	.more-arrow {
		@include setSpriteDesktop(170px, 7px ,140px, -1228px, $primary-97);
	    bottom: 0;
	    color:  $primary-52;
	    cursor: pointer;
	    display: block;
	    left: 0;
	    @include rem('padding', 5px 0 15px);
	    position: absolute;
	    text-align: left;
	    width: 100%;
	    border-top: 1px solid $primary-96;

	    &:hover{
	    	background-color:$primary-98;
	    	width: 100%;
	    }
	}

	.less-arrow {
	    @include setSpriteDesktop(170px, 7px ,140px, -1208px, $primary-97);
	    border-bottom: 1px solid $primary-96;
	    cursor: pointer;
	    display: none;
	    color:  $primary-52;
	    @include rem('left', 0px);
	    @include rem('padding', 15px 0 5px);
	    position: absolute;
	    text-align: left;
	    @include rem('top', 0px);
	    width: 100%;
	    z-index: 2;

	    &:hover{
	    	background-color:$primary-98;
	    	width: 100%;
	    }
	}

	.sub-menu {
	    background:$primary-2;
	    @include rem('margin', 0px);
	    @include rem('padding', 0px 15px);
	    width:286px;
	    position: relative;


	    li {
	    	border-top:1px solid $primary-96;
		    @include rem('margin', 0px);
		    @include rem('padding', 0 0 5px);
		    width: 286px;
		    position: absolute;
		    left:15px;
		    text-align: center;
		   /* display:table;*/

		    .image-container {
				display: table-cell;
				vertical-align: middle;
				max-height: 100px;
				text-align: center;
				max-width: 100px;
				height: 100px;
			}
			.mini-bag-img{

				display:table-cell;
				width: 120px;
				height:120px;
				text-align:center;
			}
		    img {
				display: inline-block;
				vertical-align:middle;
				@include rem('padding', 10px);
				max-height: 120px;
				max-width: 120px;
				@include box-sizing(border-box);
				
				
			}
				
			.description{
				display:table-cell;
				vertical-align:top;
				@include rem('margin-right', 10px);
				@include rem('padding-left', 10px);
				
				span{
					@include main-font();
					@include f(12);
					@include rem('padding', 0px);
					color:#9a9a9a;
					line-height:1.3rem;
					display:block;
					text-align:left;
				}

				.total-product{
					@include rem('padding', 10px 0px 0px);
				}

				.product-name{
					@include proxi-font();
					@include f(12);
					@include rem('padding', 0px 0px 12px);
					letter-spacing: 1px;
					overflow: hidden;
					margin-bottom: 10px;
					height: 1px;
				}

				.product-description{
					@include rem('line-height', 16px);
					font-style:italic;
					@include f(11);
					line-spacing:normal;
					text-transform: none;
				}

				.refer-no{
					@include rem('line-height', 18px);
					@include f(11);
					@include rem('padding', 5px 0px);
					@include font-color($primary-12);
					text-transform: none;

					a{
						@include rem('line-height', 18px);
						@include f(11);
						@include rem('padding', 5px 0px);
						@include main-font();
						color: #a0a0a0;
					}
				}
			}

			span.amount{
				@include rem('line-height', 20px);
				font-weight:100;
				@include font-color($primary-40);
				@include f(15);
				@include proxi-font();
			}
		    &:hover{
				color: $primary-2;
			}
		}

		.first {
			border-top: none;
		}
	}	
	
/* Vertical Accordion Style */
	.va-nav span {
		z-index:100;
	}

	

	.price-details{
		display:table;
		width:100%;
		border-top:1px solid $primary-96;

		.subtotal{
			@include rem('padding-top', 10px);
			width:55%;
			display:table-cell;
			vertical-align:top;

			span{
				@include rem('padding', 0px);
				color: $primary-99;
				@include main-font();
				font-style:italic;
				text-align:right;
				display:block;
				@include f(12);
				@include rem('line-height', 20px);
			}

			span:last-child{
				@include f(11);
				@include rem('line-height', 12px);
			}
		}

		.total_in_number {
			width:45%;
			display:table-cell;
			vertical-align:top;

			span{
				@include font-color($primary-40);
				@include f(16);
				@include proxi-font();
				@include rem('line-height', 20px);
				text-align:right;
				@include rem('padding-right', 20px);
				display:block;
				@include rem('margin-top', 18px);
			}
		}


	}

	 .form-button{
		@include rem('margin', 15px 0px);
		@include f(13);
		@include rem('width', 120px);
		background-position: -416px -481px;
		width: 130px;
        padding: 10px 0 10px 8px;
	}

	.button-wrapper{
		margin: 0 !important;
		@include rem('padding', 0px);

	}

}