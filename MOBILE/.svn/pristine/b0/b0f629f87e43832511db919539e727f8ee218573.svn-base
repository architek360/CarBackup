/*------------------------------------*\
   EVENT ARTICLE -- MOBILE CSS
\*------------------------------------*/
/**
	* event article template css
	* MODULE CONTAINER....main container (.event-article)
*/

/*------------------------------------*\
    $MODULE CONTAINER
\*------------------------------------*/

.event-article {
	width: 81.25%;
	margin: 0 auto;
	@include main-font;
	@include f(26);
	.heading2 {
		@include rem('padding-top',0px);
		@include rem('padding-bottom',30px);
		@include rem('margin-bottom',44px);
	}
	.heading3 {
		@include rem('padding-top',60px);
		@include rem('padding-bottom',28px);
	}
	p {
		padding-bottom: 0;	
	}
	.event-article__img {
		@include rem('margin-top',47px);
		@include rem('margin-bottom',34px);
		margin-left: auto;
		margin-right: auto;
		width: 100%;
		height: 100%;
		.event-article__img__title {
			@include main-font;
			@include f(34);
			text-align: center;
			display: block;
			@include rem('margin-bottom',10px);
		}
		.event-article__img__info {
			@include f(34);
			color: $primary-20;
			@include rem('margin-bottom',10px);
			text-align: center;
			display: block;
		}
		
		img {
			max-width: 100%;
			max-height: 100%;
			margin: 0 auto;
			display: block;
		}
	}

	.rte-wrapper{
		width: 100%;
	}
}