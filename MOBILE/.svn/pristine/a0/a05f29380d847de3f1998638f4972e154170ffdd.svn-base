/*------------------------------------*\
     BANK TRANSFER -- Mobile CSS
\*------------------------------------*/
/**
/**
 * MODULE CONTAINER....main container (.bank-transfer)
 * MESSAGE AREA... for message text (.message-box)
 * TERMS AND CONDITIONS...... for terms and condition (.terms-condition)
 * ACTION BUTTON.... for action button (.confirm-btn)
*/

/*------------------------------------*\
    $MODULE CONTAINER
\*------------------------------------*/

.bank-transfer{
	display: block;
	@include font-color($primary-2);

	/*------------------------------------*\
    		$MESSAGE AREA
	\*------------------------------------*/

	.message-box{
		@include linear-gradient(135deg, #000000 0%, #010000 73%, #460000 100%);
		@include rem(margin, 30px 0);
		border:1px solid $primary-17;
		.message{
			@include rem(padding, 0 50px 30px);
			font-style: italic;
			@include main-font;
			text-align: center;
		}
		hr{
			background: $primary-17;
			@include rem(margin, 5px 0 30px);
		}
	}

	/*------------------------------------*\
    		$TERMS AND CONDITIONS
	\*------------------------------------*/

	.terms-condition{
		display:inline-block;
		color:$primary-2;
		@include rem(padding, 13px 0 30px);
		width: 100%;
		.form-check{
			width:100%;
			text-align: left;
		}
	}

	/*------------------------------------*\
    		$ACTION BUTTON
	\*------------------------------------*/

	.confirm-btn{
		border-top: 1px solid $primary-17;
		text-align:center;
		clear:both;
		@include rem('padding',18px 0);
		.cta--red{
			width:73%;
		}
	}
	.confirmation{
		.form-check{
			width: 100%;
			text-align: left;
		}
	}
}