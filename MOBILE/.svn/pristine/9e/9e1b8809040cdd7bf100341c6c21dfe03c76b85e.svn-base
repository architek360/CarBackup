/*------------------------------------*\
	ECS PRE REGISTRATION -- Mobile CSS
\*------------------------------------*/
/**
* MODULE CONTAINER ..... (.js-pre-registration)
* JS VALIDATOR CONTAINER ..... (.js-form-validator)
* ACCORDIAN CONTAINER..... (.att-accordion)
  */

/*------------------------------------*\
    $MODULE CONTAINER
\*------------------------------------*/

.js-pre-registration{
	@include brand-font;
	@include font-color($primary-2);
	border-top:1px solid $primary-2;
	@include rem('margin', 35px 62px 0px);
	display: block;
	.welcome-message{
		text-align: center;
	}
	.details-section{
		@include rem(margin-bottom, 40px);
		border: 1px solid $primary-89;
		.comp-rich-text{
			margin: 0 auto;
			width: 90%;
			p{
				width: 100%;
			}
			.videocontainer{
				width: 100%;
				@include rem(height, 250px);
				@include rem(padding-bottom, 40px);
			}
		}
	}

	/*------------------------------------*\
		$JS VALIDATOR CONTAINER
	\*------------------------------------*/

	.js-form-validator{
		form{
			border: 1px solid $primary-89;
			.form{
				width: 90%;
				margin: 0 auto;
				.form-element{
					margin: 0;
				}
				.heading-wrapper{
					width: 100%;
				}
				.cq-colctrl-lt0-ecs-pre-registration-1{
					@include rem(padding-bottom, 45px);
				}
				.problem_desc,.address_heading{
					border-top: 1px solid $primary-89;
				}
				.collection{
					width: 100%;
				}
				.select-wrapper{
					@include rem(padding-top, 30px);
				}
				.productType{
					width: 100% !important;
				}
				.input-wrapper{
					min-height: 0;
					label{
						padding: 0;
					}
				}
				.group-wrapper{
					@include rem(padding-top, 30px);
				}
				.addressList{
					width: 100%;
				}
				.default-button{
					display: none;
				}
				.billing-shipping{
					width: 100%;
				}
				.add-icon {
		       		@include setSprite(27px, 29px, -1026px, -114px);           
					display: inline-block;
					@include rem('height', 15px);
					@include rem(margin, 0 0 0 5px);

					position:relative;
		         }
				.js-create{
					display: none;
				}
				a.js-edit{
					display: inline-block;
				}
				a.js-add{
					float: right;
				}
				.confirm{
					@include rem(margin, 10px 0 40px 0);
				}
				.problemDescription{
					@include rem(margin-bottom, 40px);
				}
				.js-edit-text, .js-create-text{
					.cross-button{
						float: right;
					}
				}
				label[for="blank"]{
					display: block;
					@include rem('margin', 40px 0 0px);
					.checker{
						@include rem('margin-right', 10px);
					}
				}
				.address2{
					display: none;
				}
				.selector{
					width: 96.2% !important;
					@include rem('padding', 0 0 0 1px);
				}
			}
		}
	}
}
#ecspre-registration_form .field-tooltip {
	display:none;
}
