.country-switcher__filter{
	.country-switcher__filter_node__title{
		span{
			position:absolute;
			right:0;
			top:30%;
			@include setSprite(32px, 32px, -743px, -20px);
		}
		span.on{
			@include setSprite(32px, 32px, -784px, -20px);
			
		}
		span.off{
			@include setSprite(32px, 32px, -743px, -20px);
		}
	}
}

