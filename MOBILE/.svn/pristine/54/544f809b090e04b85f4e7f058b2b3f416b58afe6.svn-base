/*------------------------------------*\
    $FONT VARIABLES
\*------------------------------------*/

$primary-font-1 : "CartierRegular";
$primary-font-2 : "Georgia";


$black : $primary-1;
$white : $primary-2;
$border_grey : #a09997;
$button_red : #88131d;
$text_grey : #a09f9f;
$dark_grey:#454545;
$light_black:#1d1d1d;
$bridal_topnav:#eeeeee;
$bridal_red:#88131d;

$viewLink : #353e55;
$red : #b01e23;
$light_grey: #b3b3b3;
$footerItemColor: #b3b3b3;
$select_bg:#1d1d1d;

/*------------------------------------*\
    $FONTS
\*------------------------------------*/
@font-face {
	font-family: 'CartierRegular';
	src: url($path-font+'Gotham-Book.otf');
}

@font-face {
	font-family: 'CartierBold';
	src: url($path-font+'Gotham-Bold_0.otf');
}

@font-face {
	font-family: 'CartierMedium';
	src: url($path-font+'Gotham-Medium.otf');
}


@font-face {
    font-family: 'CartierLoveTM';
    src: url($path-font+ 'cartier-tm-love-webfont.eot');
    src: url($path-font+ 'cartier-tm-love-webfont.woff') format('woff'),url($path-font+ 'cartier-tm-love-webfont.ttf') format('truetype');
}

//font faces
@mixin brand-font {
	font-family: "CartierRegular", sans-serif;
}

@mixin bold-font {
	font-family: "CartierBold", sans-serif;
}

@mixin medium-font {
	font-family: "CartierMedium", sans-serif;
}

@mixin main-font {
	font-family: Georgia, sans-serif;
}



/*------------------------------------*\
    $HEADER COMMON STYLING
\*------------------------------------*/
.text-link{
	@include font-color($primary-6);
}

.top-nav{
	.top-nav__menu{
		float: left;
		@include rem('padding', 18px 26px);
		@include rem('margin-top', 10px);

		button{

			@include setSprite(42px, 36px, -452px, -20px);
			border:none;
			text-indent: -9999px;
			overflow:hidden;

		}	
	}
}

/*------------------------------------*\
    $COLLECTION COMMON STYLING
\*------------------------------------*/
.main-container {
	.collection-image {
		
		@include rem('padding-top',20px);
	}
	.collection-image {		
		display:block;


		img{
			@include rem('max-height',400px);
			
			width: 100%;

			/*@include rem('max-height',370px);
			@include rem('max-width',640px);*/

			

		}
	}


	.heading7{
		
		color: $primary-2;
		width: 81.25%;
		margin: 0 auto;
		/*margin-bottom: 0;
		@include rem('margin-top', 38px);*/
		text-align: center;
		text-transform: uppercase;
		@include f(24);
		@include rem('padding', 25px 0px 23px);
		@include brand-font;
		font-weight:normal;
		line-height:27px;
		/*line-height:1.4em;*/
	}
	.heading6{
		@include brand-font;
		color: $primary-2;
		
		
		text-align: center;
		text-transform: uppercase;
		@include f(32);
		@include rem('padding', 0px);
		@include rem('padding-bottom', 26px);
		/*line-height:1.4em;*/
		
	}
	
	

}

.collection {
	
	.collection__title{
		
		display:block;
		.heading4{
			@include rem(padding-top, 65px);
			@include rem(padding-bottom, 22px);
			@include f(24);
		}
		.heading2{
			@include rem(padding, 0 0 41px 0);
			border-bottom: 1px solid $primary-2;
		}
	}
}


