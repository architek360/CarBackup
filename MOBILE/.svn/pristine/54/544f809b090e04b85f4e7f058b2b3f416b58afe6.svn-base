.degree360-icon{
	@include setSprite(112px, 40px, -124px, -284.5px);
}

.carousel .prev span {
	@include setSprite(35px, 100px, -19px, -285px);
}

.carousel .next span {
	@include setSprite(35px, 100px, -72px, -285px);
}

.ambassador-cont{
	.att-accordion{ 
		.js-accordion_node__title{
		> span{
			@include setSprite(22px, 30px, -743px, -20px);
		}
		span.on{
			@include setSprite(22px, 30px, -784px, -20px);
			
		}
		span.off{
			@include setSprite(22px, 30px, -743px, -20px);
		}
	}
	}
}
.form-check{
	input 
	{
		&:checked + span.form-check__icon
		{
			@include setSprite(22px, 22px, -702px, -20px);
			vertical-align: top;	
		}
	}
}
.js-login-form,.js-reg-step-1,.js-reg-step-2,.js-reg-step-3, .js-personal-info-form, .js-address-form-jp,.js-address-form, .js-forgotpassword, #js-contact-ambassador-form, #js-request-info-form, #js-request-price-form, .send_email, .js-subscription-and-interest-form{
	.group-wrapper .radio span , .radio span{
	  background-position: -81px -11px;
	}

	.group-wrapper .radio .checked, .radio .checked {
	  background-position: -111px -11px;
	}

	.group-wrapper .radio span.formerror, .radio span.formerror{
	  background-position: -139px -11px !important;
	}
}

/*------------------------------------*\
    $MOBILE SELECT ELEMENTS
\*------------------------------------*/
.select-wrapper{
	.selector {
	    background-position: -1432px -178px;

	    span {
		     background-position: right -85px;
		}
		option {
		    background-color: $primary-70;
		    color: $primary-71;
		}
	}

	.selector.formerror{
		background-position: -1432px -588px;

		 span {
		     background-position: right -495px;
		}
	}


}


.selector {
    background-position: -1432px -178px;

    span {
	     background-position: right -85px;
	}
	option {
	    background-color: $primary-70;
	    color: $primary-71;
	}
}

.form-check.formerror .form-check__wrapper{
	border: 1px solid #8f141a !important;
	background-color: #3b1112 !important;
}