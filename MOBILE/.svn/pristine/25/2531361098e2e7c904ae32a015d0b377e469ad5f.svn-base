/*------------------------------------*\
    $FONTS
\*------------------------------------*/
@font-face {
	font-family: 'CartierRegular';
	src: url($path-font+'Gotham-Book.otf');
}

@font-face {
	font-family: 'CartierBold';
	src: url($path-font+'Gotham-Bold_0.otf');
}

@font-face {
	font-family: 'CartierMedium';
	src: url($path-font+'Gotham-Medium.otf');
}

@font-face {
    font-family: 'CartierLoveTM';
    src: url($path-font+ 'cartier-tm-love-webfont.eot');
    src: url($path-font+ 'cartier-tm-love-webfont.woff') format('woff'),url($path-font+ 'cartier-tm-love-webfont.ttf') format('truetype');
}




//font faces
@mixin brand-font {
	font-family: "CartierRegular", sans-serif;
}

@mixin bold-font {
	font-family: "CartierBold", sans-serif;
}

@mixin medium-font {
	font-family: "CartierMedium", sans-serif;
}

@mixin main-font {
	font-family: Georgia, sans-serif;
}


.text-link{
	/*color: $light_grey;*/
}

.top-nav{
	.top-nav__menu{
		float: left;
		@include rem('padding', 18px 26px);
		@include rem('margin-top', 10px);

		button{
		
			@include setSprite(42px, 36px, -516px, -20px);
			border:none;
			text-indent: -9999px;
			overflow:hidden;

		}	
	}
}

#mobile-nav-search {
	color :black ;
}


/* bridal collection list title css strat here*/
.collection-image {
		display:block;

		img{
			
			height:100%;
			width: 100%;
		}
	}
.collection {
	
	.collection__title{
		display:block;
		@include rem('margin-top',27px);
		.heading4{
			@include f(34);
			@include bold-font;
			border-top: 1px solid $primary-2;
			@include rem(padding-top, 50px);
			@include rem(padding-bottom, 10px);
		}
		.heading2{
			@include f(34);
			@include bold-font;
			@include rem(padding, 0 0 45px 0);

		}
	}
	.collection__listing {
		.product-push {
			@include rem('margin-bottom',29px);
			@include rem('margin-top',0px);
			height: 230px;
			.product-push__desc
				.more-button{
					@include f(24);
				}
		}
	}

}

.main-container {
	.heading7{
		
		color: $primary-2;
		width: 81.25%;
		margin: 0 auto;
		/*margin-bottom: 0;
		@include rem('margin-top', 38px);*/
		text-align: center;
		text-transform: uppercase;
		@include f(24);
		@include rem('padding', 25px 0px 23px);
		@include brand-font;
		font-weight:normal;
		line-height:27px;
		/*line-height:1.4em;*/
	}
	.heading6{
		@include brand-font;
		color: $primary-2;
		
	
		text-align: center;
		text-transform: uppercase;
		@include f(32);
		@include rem('padding', 0px);
		@include rem('padding-bottom', 26px);
		/*line-height:1.4em;*/
		
	}	
}

