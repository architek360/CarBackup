/*------------------------------------*\
    	$ADDRESS FORM JAPAN
\*------------------------------------*/

.js-address-form-jp, .js-address-form , .js-address-form-uk{
	text-align: left;
	margin: 0 auto;
	width: 82.25%;
	fieldset {
	    position : relative;
	    a {
	    	position : absolute;
	    	bottom :  -113px;
	    	right :  46%;
	    }
	}
	.my-address-c1{
	    @include linear-gradient(135deg, #000000 0%, #010000 73%, #460000 100%);
	    border: 1px solid #464646;
	    @include rem('padding', 20px);
	    display: inline-block;
	    width: 100%;
	    @include box-sizing(border-box);
	}
	.my-address-c2{
	    border: 1px solid #464646;
	    @include rem('padding', 0 20px 30px);
	    @include rem('margin-top', 25px);
	    display: inline-block;
	    width: 100%;
	    @include box-sizing(border-box);
	}
	.my-address-c3{
	    @include linear-gradient(-45deg, #000000 0%, #010000 73%, #460000 100%);
	    border: 1px solid #464646;
	    @include rem('padding', 0 20px 30px);
	    display: inline-block;
	    @include rem('margin-top', 25px);
	    width: 100%;
	    @include box-sizing(border-box);
	}
    .js-form-address-selector{
	    width: 100%;
	    @include rem('margin-top', 25px);
	    display: inline-block;
	    @include box-sizing(border-box);
	    border:1px solid $primary-17;
	    border-bottom: none;
	    .js-first-radio{
	    	width: 49%;
	    	display: inline-block;
		    label{
		    	text-transform: uppercase;
		        @include bold-font();
		        color: $primary-2;
		        @include f(22);
		        width: 100%;
		        text-align: center;
		        display: inline-block;
		        @include rem(padding, 10px 0);
		        .radio{
			        @include rem(padding, 10px 0);
			        position: static;
			        display: block;
		        }
		    }
	    }
	    .checkbox-wrapper{
	   		margin: 0;
	    }
		.js-second-radio{
	    	width: 49%;
	    	border-left: 1px solid $primary-17;
	    	display: inline-block;
	    	label{
		        text-transform: uppercase;
		        @include bold-font();
		        @include f(22);
		        width: 100%;
		        text-align: center;
		        display: inline-block;
		        @include rem(padding, 10px 0);
		        color: #FFF;
		        .radio{
		        	@include rem(padding, 10px 0);
		        	position: static;
		        	display: block;
		        }
	    	}
	    }
	}
}

/*------------------------------------*\
    	$ADDRESS LIST
\*------------------------------------*/

.addressList{
	@include box-sizing(border-box);
	border:1px solid $primary-3;
	@include rem(margin, 0 0 30px);
	@include rem(padding, 5px 28px 20px);
	width: 82.25%;
	margin: 0 auto 30px;
	.address{
		text-align: center;
		padding-bottom:15px;
	}
	.address-name-view{
		color: $primary-2;
		@include f(22);
		text-align: center;
		font-style: italic;
		line-height: 23px;
		@include main-font();
		padding: 0;
	}
	.firstName1, .lastName1, .lastName2, .nameTitle{
		display: inline-block;
		text-transform: uppercase;
	}
	.address2, .address5, .address7, .address9, .addresscomma{
		display: inline-block;
	}
	.lastName2{
		padding-left: 5px;
	}
	.heading3{
		@include bold-font;
		@include f(22);
		@include rem(padding, 16px 0);
	}
	.message{
		text-align: center;
		font-style: italic;
		@include f(22);
		@include rem(padding, 0 0 30px);
		@include main-font;
		color: $primary-2;
	}
	.addressAction{
		border-top: 1px solid $primary-3;
		display: block;
		.button{
			color: $primary-2;
			.edit-icon {
         	@include setSprite(27px, 29px, -730px, -134px);         
			display: inline-block;
			@include rem('height', 15px);
			@include rem(margin, 0 0 0 5px);
			border-left:1px solid $primary-8;
			position:relative;
			top:-1px;
	        }
	        .delete-icon {
	       		@include setSprite(27px, 29px, -623px, -135px);           
				display: inline-block;
				@include rem('height', 15px);
				@include rem(margin, 0 0 0 5px);
				border-left:1px solid $primary-8;
				position:relative;
				top:-1px;
	        }
	        a {
				@include f(20);
				@include bold-font();
				text-transform: uppercase;
				display: inline-block;
				@include box-sizing(border-box);
				@include rem(padding, 20px 0 0);
	        }
	        .delete_add{
	        	float: right;
	        }
		}
	}
}
#address-select{
	.select-wrapper{
		display: none;
	}
	.js-message{
		display: none;
	}
}
#create-text, #edit-text{
	width: 82.25%;
	margin: 0 auto;
	.title-line{
		border:none;
		span{
			position: static;
			@include rem(margin, 68px 0 0);
			border-top:1px solid $primary-2;
			@include rem(padding, 28px 0 41px);
			@include medium-font;
			border-bottom:none;
			display: block;
			@include f(28);
		}
	}
}
#cq-image-jsp-\/content\/car\/jp\/japan\/ja\/services\/my-cartier\/my-preferences\/my-addresses\/jcr\:content\/par\/image,
#cq-image-jsp-\/content\/car\/langmaster\/global\/en\/services\/my-cartier\/my-addresses-jp\/jcr\:content\/par\/image{
	height: 100%;
	width: 82.25%;
	height: 238px;
	margin: 0 auto;
	img{
		max-height: 100%;
		max-width: 100%;
	}
}

/*------------------------------------*\
    	$BOB J BOLOCK
\*------------------------------------*/

.js-bobj-section-two{
	.button-wrapper {
	  	display: inline-block;
	  	@include rem('margin-top', 30px);
	  	text-align: center;
	  	width: 100%;
		margin-top:0px;
		margin-bottom:30px;
		.form-button {
		 	@include setSpriteMobileDesktop(auto, auto, -1371px, 1px, #8f141a);
		 	display: inline-block;
		 	vertical-align: middle;
		 	color: white;
		 	@include bold-font();
		 	@include rem('padding', 15px 38px 17px 57px);
		 	@include f(20);
		 	text-transform: uppercase;
		 	letter-spacing: 1px;
		 	border: none;
		 	cursor: pointer;
		}
	}
}
.js-bobj-address{
	padding: 30px;
	.js-bobj-address-li {
		border:solid 1px $primary-11 ;
		width: 350px;
		margin: 0 auto;
		@include medium-font;
		font-size:18px;
		padding:20px;
		margin-top: 10px;
		@include font-color($primary-2);
		span {
			display: block;
			text-align: center;
			padding: 7px;
			&.js-add-city, &.js-add-state{
			display:inline;
			}
		}
		.radio-bobj{
			display:inline-block;
			margin:0;
			vertical-align:top;
			.radio{
				line-height:160px;
				vertical-align:middle;
				span{
					width:4px;
				}
				input{
					width: 17px;
					height: 27px;
					margin-top: -11px;
					margin-left: -6px;
				}
			}
			span{
				display:inline-block;
			}
		}
		.address-bobj{
			display:inline-block;
			width:89%;
			text-align:center;
		}
		span.js-add-fname{
			text-align: right;			
			font-size:22px;
			display: inline-block;
			text-transform: uppercase;
		}
		span.js-add-lname{
			text-align: left;			
			font-size:22px;
			display: inline-block;
			text-transform: uppercase;
		}
		span.js-add-snum {
			text-align: right;			
			display: inline-block;
		}
		span.js-add-sname {
			text-align: left;
			display: inline-block;
		}
		span.js-add-pobox {
			text-align: left;
			display: inline-block;
		}
		span.name-row , span.address-row {
			display:block;
			padding: 0px;
		}
	}	
}
.visibility-none {
	visibility: hidden !important;
}
.js-address-form{
	.my-address-c2{
		margin-top: 0;
	}
}

.addressform_address9{
	label{
		padding-top: 36px;
	}
}