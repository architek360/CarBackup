/**
 * MODULE CONTAINER....(.term-of-sale)
*/

/*------------------------------------*\
    $MODULE CONTAINER
\*------------------------------------*/

.term-of-sale {
	width: 81.25%;
	margin: 0 auto;
	.heading2 {
		@include rem('padding-bottom',50px);
		border-bottom: 1px solid $primary-3;
		@include rem('line-height',37px);
		@include rem('margin-bottom',70px);
	}
	h4 {
		@include rem('margin-bottom',20px);
		padding: 0;
	}
	p {
		@include rem('margin-bottom',38px);
		padding: 0;
	}
	p:last-child{
		@include rem('margin-bottom',64px);
	}
}